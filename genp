#!/usr/bin/env python3

import argparse, shutil, string


def main(argv=None):
	opts = _parse_args(argv)

	# https://en.wikipedia.org/wiki/Cryptographically_secure_pseudorandom_number_generator#Special_designs
	with open("/dev/random", "rb") as fo:
		passcodes = [genp(fo, opts.length, opts.alphabet) for i in range(opts.number)]
		per_line = (opts.width + 1) // (opts.length + 1)
		while passcodes:
			print(" ".join(passcodes[:per_line]))
			passcodes = passcodes[per_line:]


def genp(fo, length, alphabet):
	assert len(alphabet) <= 255
	return "".join(alphabet[x % len(alphabet)] for x in fo.read(length))


def _parse_args(argv=None):
	parser = argparse.ArgumentParser(prog=(argv[0] if argv is not None else None))
	parser.add_argument(
		"--alphabet", "-a",
		dest="alphabet",
		action="store",
		type=str,
		metavar="CHARACTERS",
		default=None
	)
	parser.add_argument(
		"--type", "-t",
		dest="type",
		choices=["pin", "password", "hex"],
		default="password"
	)
	parser.add_argument(
		"--number", "-n",
		dest="number",
		action="store",
		type=int,
		metavar="N",
		default=None,
		help="how many PINs to generate"
	)
	parser.add_argument(
		"--length", "-l",
		dest="length",
		action="store",
		type=int,
		metavar="N",
		default=None,
		help="how many digits in each PIN"
	)
	parser.add_argument(
		"--width", "-w",
		dest="width",
		action="store",
		type=int,
		metavar="N",
		default=None,
		help="print no more than specified chars per line"
	)
	parser.add_argument(
		"--include-punctuation",
		dest="punctuation",
		action="store_true",
		default=False,
		help="include punctuation in the alphabet if --type password is specified, no effect otherwise"
	)

	opts = parser.parse_args(argv[1:] if argv is not None else None)

	default_alphabet = None
	default_length = None

	if opts.type == "pin":
		default_length = 6
		default_alphabet = string.digits
	elif opts.type == "password":
		default_length = 32
		default_alphabet = (string.ascii_lowercase + string.ascii_uppercase + string.digits)
		if punctuation:
			default_alphabet += string.punctuation.encode("ascii").translate(None, b"'\"").decode("ascii")
	elif opts.type == "hex":
		default_length = 32
		default_alphabet = string.digits + string.ascii_uppercase[:6]
	else:
		parser.error("invalid passcode type")

	if opts.length is None:
		opts.length = length

	screen_size = shutil.get_terminal_size()

	if opts.width is None:
		opts.width = screen_size.columns

	if opts.width < opts.length:
		parser.error("width can not be less than length")

	if opts.number is None:
		per_line = (opts.width + 1) // (opts.length + 1)
		opts.number = (screen_size.lines - 2) * per_line
		if opts.number % per_line:
			opts.number = opts.number + per_line - opts.number % per_line

	if opts.alphabet is None:
		opts.alphabet = alphabet

	if not opts.alphabet:
		parser.error("alphabet can be be empty")

	return opts


if __name__ == '__main__':
	main()
